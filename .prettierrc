{
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "es5",
	"useTabs": true,
	"overrides": [
		{
			"files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
			"options": {
				"tabWidth": 2
			}
		},
		{
			"files": ["**/*.astro"],
			"options": {
				"parser": "astro"
			}
		}
	]
}
